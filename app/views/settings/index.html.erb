<div class="container fluid">
    <% content_for :sidebar do %>
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="sidebar-sticky">
            <li class="nav-item" data-target="#sidebarMenu">
              <%= link_to 'Dashboard', user_dashboard_path, class: 'nav-link', id: 'dashboard_link' %>
            </li>
            <li class="nav-item" data-target="#sidebarMenu">
              <%= link_to 'Settings', settings_path, class: 'nav-link active', id: 'settings_link' %>
            </li>
        </div>
      </nav>
    <% end %>
    <div class="row">
      <div class="col-md-9 offset-md-3">
          <h1>Settings</h1>
        </div>
    </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    elem1 = document.getElementById('dashboard_link');
    elem2 = document.getElementById('settings_link');
    toggler = document.getElementsByClassName('navbar-toggler')[0];
    elem1.onclick = function() {
      elem1.className = 'nav-link active';
      elem2.className = 'nav-link';
      if (window.innerWidth <= 800) {
        toggler.click();
      }
    }
    elem2.onclick = function() {
      elem2.className = 'nav-link active';
      elem1.className = 'nav-link';
      if (window.innerWidth <= 800) {
        toggler.click();
      }
    }
  });
</script>