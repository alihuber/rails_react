<div class="container">
  <div class="row loginrow">
    <div class="col-md-6 offset-md-3">
      <h1><%= t('session.login')%></h1>
        <%= bootstrap_form_for(@form, url: login_path, html: {name: 'loginForm'}) do |f| %>
          <%= f.email_field :email, label: t('.email_field_label') %>
          <%= f.password_field :password, label: t('.password_field_label') %>
          <%# <%= link_to t(".forgot_password"), password_reset_path, id: "forgot_password_link" %>
          <%= f.submit "Log In", id: 'submit_login' %>
          <%= f.check_box :remember_me, label: t(".remember_me"), inline: true %>
        <% end %>
    </div>
  </div>
</div>